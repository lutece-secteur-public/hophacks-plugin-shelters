<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plug-in>
    <name>shelters</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>shelters.plugin.description</description>
    <provider>shelters.plugin.provider</provider>
    <provider-url>http://mosslabs.io</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2018 City of Baltimore</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>SHELTERS_MANAGEMENT</feature-id>
            <feature-title>shelters.adminFeature.ManageShelters.name</feature-title>
            <feature-description>shelters.adminFeature.ManageShelters.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/shelters/ManageShelters.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
        </admin-feature>
        <admin-feature>
            <feature-id>SHELTERS_BED_MANAGEMENT</feature-id>
            <feature-title>shelters.adminFeature.ManageBeds.name</feature-title>
            <feature-description>shelters.adminFeature.ManageBeds.description</feature-description>
            <feature-level>2</feature-level>
            <feature-url>jsp/admin/plugins/shelters/ManageBeds.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
        </admin-feature>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>shelters</application-id>
            <application-class>fr.paris.lutece.plugins.shelters.web.SheltersApp</application-class>
        </application>
    </applications>


    <!-- Javascript files -->
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>shelters/sheltersMap.js</javascript-file>
    </javascript-files>
    
    <!-- CSS files -->
    <css-stylesheets>
        <css-stylesheets-scope>portal</css-stylesheets-scope>
        <css-stylesheet>shelters/shelters.css</css-stylesheet>
    </css-stylesheets>

    
</plug-in>